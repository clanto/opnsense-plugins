<model>
    <mount>//OPNsense/maltrail/general</mount>
    <description>Maltrail general configuration</description>
    <version>1.11.0</version>
    <items>
        <showdebug type="BooleanField">
            <default>0</default>
            <Required>Y</Required>
        </showdebug>
        <logdir type="TextField">
            <default>/var/log/maltrail</default>
            <Required>N</Required>
        </logdir>
        <proxyaddress type="HostnameField">
            <Required>N</Required>
        </proxyaddress>
        <proxyport type="PortField">
            <Required>N</Required>
        </proxyport>
        <disablechecksudo type="BooleanField">
            <default>0</default>
            <Required>N</Required>
        </disablechecksudo>
        <trailsfile type="TextField">
            <Required>N</Required>
        </trailsfile>
    </items>
</model>
